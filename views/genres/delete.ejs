<% include ../partials/header %>

<% include ../partials/sidebar-nav %>

   <div class="col-sm-9">

      <h1><%= title %> <%= genre.name %></h1>

      <% if(books.length > 0) { %>
         <p>
            <strong>Delete the following books before attempting to delete
            this genre.</strong>
         </p>

         <div style="margin: 20px 0px 0px 20px;">
            <h4>Books</h4>

            <ul class="dynamic-content-ul">
               <% books.forEach(function(book){ %>
                  <li>
                     <a href="<%= book.url %>"><%= book.title %></a>
                     | <%= book.author.name %> <!-- virtual name -->
                  </li>
               <% }); %>
            </ul>
         </div>

      <% } else { %>

         <p>Do you really want to delete <em><%= genre.name %></em>?</p>

         <form action="" method="post">
            <div class="form-group">
               <input type="hidden" id="genreid" name="genreid"
                  value="<%= genre._id %>">
            </div>
            <div class="form-group">
               <button type="submit" class="btn btn-danger">Delete</button>
            </div>
         </form>

      <% } %>
   </div>
</div>

<% include ../partials/footer %>
