<% include ../partials/sidebar-nav %>

      <div class="col-sm-9">

         <h1><%- title %></h1>

         <ul class="dynamic-content-ul">
            <% if(book_list){ %>
               <% book_list.forEach(function(book){ %>
                  <li>
                     <a href="<%= book.url %>"><%= book.title %></a>
                     | <%= book.author.name %> <!-- virtual name -->
                  </li>
               <% }) %>
            <% } else { %>
               <li>There are no books.</li>
            <% } %>
         </ul>

      </div>

   </div>
</div>

